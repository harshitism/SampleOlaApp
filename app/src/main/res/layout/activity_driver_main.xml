<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sample.olaapp.DriverMainActivity">


    <android.support.design.widget.TabLayout

        android:id="@+id/drivertablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Blue500"
        app:tabIndicatorColor="@color/White"
        app:tabSelectedTextColor="@color/White"
        app:tabTextColor="@color/Blue300">

        <android.support.design.widget.TabItem
            android:id="@+id/driver1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D 1" />

        <android.support.design.widget.TabItem
            android:id="@+id/driver2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D 2" />

        <android.support.design.widget.TabItem
            android:id="@+id/driver3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D 3" />
        <android.support.design.widget.TabItem
            android:id="@+id/driver4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D 4" />
        <android.support.design.widget.TabItem
            android:id="@+id/driver5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D 5" />

    </android.support.design.widget.TabLayout>


    <android.support.design.widget.TabLayout

        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Blue500"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabSelectedTextColor="@color/White"
        app:tabIndicatorHeight="3dp"
        app:tabTextColor="@color/Blue200">

        <android.support.design.widget.TabItem
            android:id="@+id/waiting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WAITING" />

        <android.support.design.widget.TabItem
            android:id="@+id/ongoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ONGOING" />

        <android.support.design.widget.TabItem
            android:id="@+id/completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMPLETED" />

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
